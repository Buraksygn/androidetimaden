<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:focusable="false"
    tools:context="com.etimaden.SevkiyatIslemleri.Arac_aktivayon_islemleri.frg_arac_aktivasyon">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:textColor="@color/green"
        android:layout_y="0dp"
        android:text="frg_arac_aktivasyon"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txtYazi5"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="20dp"
        android:textColor="@color/green"
        android:gravity="center_horizontal|center_vertical"
        android:text="ARAÇ İŞ EMRİ AKTİVASYON"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtYazi"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_x="0dp"
        android:layout_y="50dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="YÜKLEME AKTİVASYONU İÇİN ARAÇ ETİKETİ OKUTUNUZ..."
        android:textColor="@color/red1"
        android:textSize="16dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btnBekleyenAracListesi"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_x="0dp"
        android:layout_y="110dp"
        android:background="@drawable/btn_menu_normal"
        android:gravity="center"
        android:text="BEKLEYEN ARAÇ LİSTESİ"
        android:textColor="@color/green"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="325dp"
        android:layout_height="350dp"
        android:layout_x="1dp"
        android:layout_y="155dp"
        app:srcCompat="@mipmap/cbimage" />

    <Button
        android:id="@+id/btngeri"
        android:layout_width="325dp"
        android:layout_height="60dp"
        android:layout_x="0dp"
        android:layout_y="510dp"
        android:background="@drawable/my_button_cikis"
        android:gravity="center"
        android:text=" &lt; &lt; GERİ"
        android:textColor="@color/colorRed"
        android:textSize="20sp" />




</AbsoluteLayout>