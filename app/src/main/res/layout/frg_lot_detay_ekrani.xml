<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:focusable="false"
    tools:context="com.etimaden.depolarArasiSevkIslemi.Lot_detay_sorgulama.frg_lot_detay_ekrani">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:text="frg_lot_detay_ekrani"
        android:textColor="@color/green"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txtYazi6"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_x="50dp"
        android:layout_y="15dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="LOT SERİNO DETAYI"
        android:textColor="@color/green"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_01"
        android:layout_width="325dp"
        android:layout_height="60dp"
        android:layout_x="0dp"
        android:layout_y="65dp"
        android:background="@drawable/btn_menu_normal"
        android:gravity="center"
        android:text="YENİLE"
        android:textColor="@color/green"
        android:textSize="18sp"
        android:focusable="false"/>

    <HorizontalScrollView
        android:layout_width="325dp"
        android:layout_height="340dp"
        android:layout_x="0dp"
        android:layout_y="128dp">

        <ListView
            android:id="@+id/isemri_list"
            android:layout_width="wrap_content"
            android:layout_height="330dp"
            android:listSelector="@color/colorBlackSecili"
            android:scrollbars="horizontal|vertical"
            android:textColor="@color/green" />

    </HorizontalScrollView>

    <Button
        android:id="@+id/btnGeri"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_x="0dp"
        android:layout_y="500dp"
        android:background="@drawable/my_button_cikis"
        android:gravity="center"
        android:textSize="20sp"
        android:focusable="false"
        android:text=" &lt; &lt; GERİ"
        android:textColor="@color/colorRed" />

</AbsoluteLayout>