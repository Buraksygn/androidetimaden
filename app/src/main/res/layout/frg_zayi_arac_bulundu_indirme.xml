    <TextView
        android:id="@+id/txtDetaylar"
        android:layout_width="325dp"
        android:layout_height="300dp"
        android:layout_x="1dp"
        android:layout_y="135dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="ARAÇ İŞ EMRİ DETAYI"
        android:textColor="@color/green"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnOnay"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_x="0dp"
        android:layout_y="450dp"
        android:background="@drawable/btn_menu_normal"
        android:gravity="center"
        android:text="İLERİ &gt; &gt;"
        android:textColor="@color/green"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btngeri"
        android:layout_width="325dp"
        android:layout_height="60dp"
        android:layout_x="0dp"
        android:layout_y="510dp"
        android:background="@drawable/my_button_cikis"
        android:gravity="center"
        android:text=" &lt; &lt; GERİ"
        android:textColor="@color/colorRed"
        android:textSize="20sp" />




</AbsoluteLayout>