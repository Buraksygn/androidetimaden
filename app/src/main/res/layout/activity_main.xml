<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorBlack"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_x="24dp"
        android:layout_y="37dp"
        android:text="activity_main"
        android:textColor="@color/green"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txtAd"
        android:layout_width="105dp"
        android:layout_height="30dp"
        android:textColor="@color/colorGreen"
        android:layout_x="25dp"
        android:layout_y="55dp"
        android:ems="10"
        android:text="Kullanıcı Adı"
        android:gravity="left"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtSifre"
        android:layout_width="106dp"
        android:textColor="@color/colorGreen"
        android:layout_height="42dp"
        android:layout_x="25dp"
        android:layout_y="106dp"
        android:text="Şifre"
        android:gravity="left"
        android:textStyle="bold"
        android:ems="10">

    </TextView>

    <EditText
        android:id="@+id/editTextAd"
        android:textColor="@color/colorGreen"
        android:paddingLeft="15dp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_x="150dp"
        android:layout_y="52dp"
        android:background="@drawable/btn_giris_yap"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/editTextSifre"
        android:textColor="@color/colorGreen"
        android:paddingLeft="15dp"
        android:background="@drawable/btn_giris_yap"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_x="150dp"
        android:layout_y="103dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnGiris"
        android:textColor="@color/colorGreen"
        android:layout_width="325dp"
        android:layout_height="95dp"
        android:layout_x="25dp"
        android:layout_y="195dp"
        android:textSize="24sp"
        android:background="@drawable/btn_giris_yap"
        android:text="GİRİŞ" />


    <Button
        android:id="@+id/btnCikis"
        android:layout_width="325dp"
        android:layout_height="95dp"
        android:layout_x="25dp"
        android:layout_y="475dp"
        android:background="@drawable/btn_cikis_yap"
        android:gravity="center"
        android:text="ÇIKIŞ"
        android:textColor="@color/colorRed"
        android:textSize="24sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/txtversiyon2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_x="230dp"
        android:layout_y="570dp"
        android:gravity="right"
        android:text="txtversiyon"
        android:textColor="@color/colorGreen"
        android:textStyle="bold" />

</AbsoluteLayout>