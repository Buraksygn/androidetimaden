<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:focusable="false"
    tools:context="com.etimaden.manipulasyon.palet_duzenleme_islemleri.frg_palet_dagitma_islemi">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:textColor="@color/green"
        android:layout_y="0dp"
        android:text="frg_palet_dagitma_islemi"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txtYazi5"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="29dp"
        android:textColor="@color/green"
        android:gravity="center_horizontal|center_vertical"
        android:text="PALET DAĞITMA İŞLEMİ"
        android:textSize="20dp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/txtYazi"
        android:layout_width="325dp"
        android:layout_height="70dp"
        android:layout_x="0dp"
        android:layout_y="70dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="ETİKETİ OKUTUNUZ..."
        android:textColor="@color/green"
        android:textSize="16dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageTanimResmi"
        android:layout_width="325dp"
        android:layout_height="350dp"
        android:layout_x="1dp"
        android:layout_y="135dp"
        app:srcCompat="@mipmap/tag_yellow"
        android:focusable="false" />

    <Button
        android:id="@+id/btnGeri"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_x="0dp"
        android:layout_y="500dp"
        android:background="@drawable/my_button_cikis"
        android:gravity="center"
        android:textSize="20sp"
        android:focusable="false"
        android:text=" &lt; &lt; GERİ"
        android:textColor="@color/colorRed" />

    <Button
        android:id="@+id/btnOkuma"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_x="224dp"
        android:layout_y="500dp"
        android:background="@drawable/btn_menu_normal"
        android:gravity="center"
        android:textSize="20sp"
        android:focusable="false"
        android:text="KAREKOD"
        android:textColor="@color/green" />

</AbsoluteLayout>