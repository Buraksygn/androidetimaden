<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context="com.etimaden.SevkiyatIslemleri.frg_aktif_isemri_yukleme_eski">

    <Button
        android:id="@+id/btn_03"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_x="0dp"
        android:layout_y="96dp"
        android:background="@drawable/btn_menu_normal"
        android:gravity="center"
        android:text="TAMAM"
        android:textColor="@color/green"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtYazi6"
        android:textColor="@color/green"
        android:layout_width="269dp"
        android:layout_height="56dp"
        android:layout_x="56dp"
        android:layout_y="20dp"
        android:gravity="center_horizontal|left"
        android:text="\nYÜKLEME LİSTESİ"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:textColor="@color/green"
        android:text="frg_aktif_isemri_yukleme"
        android:textSize="12dp" />


    <HorizontalScrollView
        android:layout_width="325dp"
        android:layout_height="315dp"
        android:layout_x="2dp"
        android:layout_y="165dp">

        <ListView
            android:id="@+id/isemri_list"
            android:layout_width="wrap_content"
            android:layout_height="310dp"
            android:listSelector="@color/colorBlackSecili"
            android:scrollbars="horizontal|vertical"
            android:textColor="@color/green" />

    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="325dp"
        android:layout_height="32dp"
        android:layout_x="0dp"
        android:layout_y="480dp"
        android:text="TextView"
        android:textColor="@color/green"
        android:textSize="16dp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="324dp"
        android:layout_height="55dp"
        android:layout_x="0dp"
        android:layout_y="515dp"
        android:background="@drawable/my_button_cikis"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_trigger_rfid"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:checked="false"
            android:text="RFID"
            android:textColor="@color/green"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radio_trigger_scanner"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:checked="true"
            android:text="KAREKOD"
            android:textColor="@color/green"
            android:textSize="18sp" />
    </RadioGroup>

    <Button
        android:id="@+id/imgBilgi"
        android:layout_width="55dp"
        android:layout_height="70dp"
        android:layout_x="0dp"
        android:layout_y="16dp"
        android:background="@drawable/btn_menu_normal"
        android:gravity="center"
        android:text="Bilgi"
        android:textColor="@color/green"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/btnyenile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_x="238dp"
        android:layout_y="92dp"
        android:background="@drawable/btn_siyah"
        android:padding="0dp"
        android:src="@drawable/reload" />


</AbsoluteLayout>