<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:scrollbars="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="45dp"
        android:gravity="right"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/colorGreen"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text=""
        android:textSize="20dp"
        android:id="@+id/yazi_kod_sira"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="130dp"
        android:textColor="@color/colorGreen"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Sap Kodu"
        android:textSize="20dp"
        android:id="@+id/yazi_kod_sap"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="130dp"
        android:textColor="@color/colorGreen"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Plaka"
        android:textSize="20dp"
        android:id="@+id/yazi_arac_plaka"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:textColor="@color/colorGreen"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Ürün Adı"
        android:textSize="20dp"
        android:id="@+id/yazi_urun_adi"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="100dp"
        android:textColor="@color/colorGreen"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Kalan Miktar"
        android:gravity="right"
        android:textSize="20dp"
        android:id="@+id/yazi_kalan_agirlik"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="100dp"
        android:textColor="@color/colorGreen"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="right"
        android:text="Kalan Adet"
        android:textSize="20dp"
        android:id="@+id/yazi_kalan_palet_sayisi"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="100dp"
        android:textColor="@color/colorGreen"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Yapılan Miktar"
        android:gravity="right"
        android:textSize="20dp"
        android:id="@+id/yazi_yapilan_miktar"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="100dp"
        android:textColor="@color/colorGreen"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="right"
        android:text="Kalan Adet"
        android:textSize="20dp"
        android:id="@+id/yazi_yapilan_adet"/>
</LinearLayout>
