<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:scrollbars="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="0dp"
        android:paddingRight="5dp"
        android:textColor="@color/colorGreen"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Sıra No"
        android:textSize="30dp"
        android:id="@+id/yazi_sira_no"/>


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:textColor="@color/colorGreen"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Araç Plaka"
        android:textSize="30dp"
        android:id="@+id/yazi_arac_plaka"/>


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/colorGreen"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Sap Kodu"
        android:textSize="30dp"
        android:id="@+id/yazi_isemri"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/colorGreen"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Miktar"
        android:textSize="30dp"
        android:id="@+id/yazi_konteyner_plaka"/>



    <TextView
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:paddingLeft="5dp"
        android:textColor="@color/colorGreen"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="#"
        android:textSize="30dp"
        android:id="@+id/yazi_arac_rfid"/>
</LinearLayout>
