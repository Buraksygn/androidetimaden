<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:focusable="false"
    tools:context="com.etimaden.SevkiyatIslemleri.frg_arac_bulundu_indirme">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:textColor="@color/green"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:text="frg_arac_bulundu_indirme"
        android:textSize="12dp" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_x="45dp"
        android:layout_y="20dp"
        android:gravity="center_horizontal"
        android:text="ARAÇ İŞ EMRİ DETAYI"
        android:textColor="@color/green"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_x="0dp"
        android:layout_y="20dp"
        app:srcCompat="@mipmap/information3" />



    <Button
        android:id="@+id/btnIsemriDegistir"
        android:layout_width="324dp"
        android:layout_height="50dp"
        android:layout_x="0dp"
        android:layout_y="60dp"
        android:background="@drawable/btn_menu_normal"
        android:gravity="center"
        android:text="İŞ EMRİ DEĞİŞTİR"
        android:textColor="@color/green"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtaciklama"
        android:layout_width="325dp"
        android:layout_height="256dp"
        android:layout_x="0dp"
        android:layout_y="114dp"
        android:gravity="top|center_horizontal"
        android:textColor="@color/green"
        android:textSize="22sp" />

    <Button
        android:id="@+id/btnileri"
        android:layout_width="324dp"
        android:layout_height="60dp"
        android:layout_x="0dp"
        android:layout_y="370dp"
        android:background="@drawable/btn_menu_normal"
        android:gravity="center"
        android:text=" &gt; &gt; İLERİ"
        android:textColor="@color/green"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btngeri"
        android:layout_width="324dp"
        android:layout_height="60dp"
        android:layout_x="0dp"
        android:layout_y="440dp"
        android:background="@drawable/my_button_cikis"
        android:gravity="center"
        android:textSize="20sp"
        android:text=" &lt; &lt; GERİ"
        android:textColor="@color/colorRed" />




</AbsoluteLayout>